<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="turma_android.com.br.appnotificacao.MainActivity">

    <Button
        android:onClick="criarNotificacao"
        android:text="Criar Notificação"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="cancelarNotificacao"
        android:text="Cancelar Notificação"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="3dp" />

    <Button
        android:onClick="baixarImagem"
        android:text="Baixar Imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
